							<div class="h-[22px] lg:h-[33px] lg:w-6 w-4">
								{% include 'components/icons/list.svg' %}
							</div>

						{% endblock %}
					{% endembed %}
				</li>

				<li>
					{% embed 'components/button/icon_button.html.twig' with { text: "Me connecter" } %}
						{% block icon %}
							<div class="h-[22px] lg:h-[33px] lg:w-6 w-4">
								{% include 'components/icons/user.svg' %}
							</div>
						{% endblock %}
					{% endembed %}
				</li>

				<li>
					{% embed 'components/button/icon_button.html.twig' with { text: "Mon panier", notification: 129 } %}
						{% block icon %}
							<div class="h-[22px] lg:h-[33px] w-[22px] lg:w-[30px]">
								{% include 'components/icons/cart.svg' %}
							</div>
						{% endblock %}
					{% endembed %}
				</li>
			</ul>
		</nav>
	</div>

	<div class="lg:hidden shadow-headerShadow py-4 px-5">
		{% include 'components/layout/search_bar.html.twig' with { text: "Ici tu trouveras ce que tu recherches" } %}
	</div>

	<div class="hidden lg:block shadow-headerShadow px-[60px] py-3.5">
		<nav>
			<ul class="flex items-center gap-x-12 gap-y-4 flex-wrap justify-center">
				{% for link in links %}
					<li>
						<a href="{{ link.url }}" class="font-semibold transition-transform group relative block hover:font-bold hover:-translate-y-1 text-base text-font-text-black">{{ link.label }}
							<img src="{{ asset('images/scrach.svg') }}" alt="Scrach" class="hidden group-hover:inline-block absolute inset-0 w-full h-full pointer-events-none -z-10">
						</a>
					</li>
				{% endfor %}

				<li>
					<a href="#" class="relative py-1.5 px-1">
						<span class="font-semibold text-base text-white">Mise en avant</span>
						<div class="absolute inset-0 -z-10 bg-states-error-promo rounded-[4px] -rotate-3"></div>
					</a>
				</li>

				<li>
					<a href="#" class="flex items-center gap-1">
						<div class="size-4 text-primary/orange-dark">
							{% include 'components/icons/personalized.svg' %}
						</div>
						<span class="font-semibold text-base text-primary/orange-dark">
							Objets personnalisés
						</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</header>

