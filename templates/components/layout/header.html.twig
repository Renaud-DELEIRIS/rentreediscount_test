	<div class="flex justify-between items-center px-5 py-4 shadow-headerShadow">

		<button class="w-2.5 h-3 ml-auto" id="close-btn">
			{% include 'components/icons/x.svg' %}
			<span class="sr-only">Fermer</span>
		</button>
	</div>


	<ul class="space-y-5 pt-6 pb-9 px-5">
		{% for link in links %}
			<li>
				<a href="{{ link.url }}" class="font-bold text-[13px] text-font-text-black flex justify-between">
					<span>{{ link.label }}</span>
					<div class="w-3.5 h-2">
						{% include 'components/icons/chevron_right.svg' %}
					</div>
				</a>
			</li>
		{% endfor %}

		<li>
			<a href="#" class="flex items-center justify-between gap-1">
				<div class="flex items-center gap-2.5">
					<div class="size-4 text-primary/orange-dark">
						{% include 'components/icons/personalized.svg' %}
					</div>
					<span class="font-semibold text-[13px] tracking-[0.39px] text-primary/orange-dark">
						Objets personnalisés
					</span>
				</div>
				<div class="w-3.5 h-2">
					{% include 'components/icons/chevron_right.svg' %}
				</div>
			</a>
		</li>


		<li>
			<a href="#" class="flex items-center justify-between gap-1">
				<div class="flex items-center gap-2.5">
					<span class="font-semibold text-[13px] tracking-[0.39px] text-primary/orange-dark">
						French days
					</span>
				</div>
				<div class="w-3.5 h-2">
					{% include 'components/icons/chevron_right.svg' %}
				</div>
			</a>
		</li>
	</ul>

	<ul class="space-y-4 px-5">
		<li>
			<a href="#" class="flex flex-col overflow-hidden rounded-2xl">
				<img src="{{ asset('images/menu1.jpg' ) }}" alt="Menu 1" class="w-full h-[105px] object-cover" width="105" height="105" loading="lazy">
