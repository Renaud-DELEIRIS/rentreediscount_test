<header>
	<div class="px-5 py-3 lg:px-20 flex items-center lg:gap-[60px] gap-4 shadow-headerShadow w-full">
		<button class="lg:hidden shrink-0 size-6" id="burger-btn">
			{% include 'components/icons/burger_menu.svg' %}
			<span class="sr-only">Menu</span>
		</button>

		<a href="{{ path('home_page') }}" class="shrink-0">
			<img src="{{ asset('images/logo.svg') }}" alt="Logo" class="h-[13px] lg:h-[25px] lg:w-[277px] w-[166px]" width="166" height="25" loading="lazy">
		</a>

		<div class="hidden lg:block w-full">
			{% include 'components/layout/search_bar.html.twig' with { text: "Ici tu trouveras ce que tu recherches" } %}
		</div>

		<nav class="shrink-0 ml-auto">
			<ul class="flex items-center gap-4">
				<li>
					{% embed 'components/button/icon_button.html.twig' with { text: "Listes scolaires" } %}
